# 資料庫設定 (PostgreSQL)
# 選項 1: 使用 DATABASE_URL (推薦用於生產環境)
DATABASE_URL=postgresql://username:password@host:port/database_name

# 選項 2: 使用個別環境變數
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zaisnovel
DB_USERNAME=your_username
DB_PASSWORD=your_password

# JWT 設定
JWT_SECRET=your_jwt_secret_key_here

# 環境設定
NODE_ENV=production

# 伺服器設定
PORT=3000

# 檔案上傳設定
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# CORS 設定 (用於跨域部署)
FRONTEND_URL=https://zaisnovel-frontend.onrender.com
