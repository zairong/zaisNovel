{
  "name": "zaisnovel-backend",
  "description": "Zai's Novel backend API",
  "repository": "https://github.com/yourusername/zaisNovel",
  "logo": "",
  "keywords": ["node", "express", "postgresql", "ebook", "novel"],
  "env": {
    "NODE_ENV": {
      "description": "Environment setting",
      "value": "production"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL",
      "required": true
    },
    "JWT_SECRET": {
      "description": "JWT secret key",
      "generator": "secret"
    },
    "PORT": {
      "description": "Port number",
      "value": "3000"
    }
  },
  "addons": [
    {
      "plan": "postgresql:free"
    }
  ]
}
